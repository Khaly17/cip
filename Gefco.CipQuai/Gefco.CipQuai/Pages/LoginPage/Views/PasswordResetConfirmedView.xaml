<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Gefco.CipQuai.LoginPage"
             xmlns:buttons="clr-namespace:Syncfusion.XForms.Buttons;assembly=Syncfusion.Buttons.XForms"
             xmlns:controls="clr-namespace:Gefco.CipQuai.Controls;assembly=Gefco.CipQuai"
             x:Class="Gefco.CipQuai.LoginPage.Views.PasswordResetConfirmedView" Padding="20">

    <Grid>
        <StackLayout Margin="10,0" VerticalOptions="CenterAndExpand">
            <Label Text="{Binding LostPasswordConfirmedInvite}"
                   Style="{StaticResource TitleLabelStyle}" />

            <StackLayout Padding="0" HorizontalOptions="Center">
                <controls:ExtHyperLink Text="Retour à la page de connexion" HorizontalOptions="Center"
                                       Command="{Binding GoToViewCommand}" 
                                       CommandParameter="{x:Static local:ViewType.LoginView}" />
                <BoxView BackgroundColor="{StaticResource MediumBlueColor}" HeightRequest="1" Margin="0,-8,0,0" />
            </StackLayout>

        </StackLayout>
    </Grid>
</ContentView>