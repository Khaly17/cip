@using Gefco.CipQuai.Web.Models
@model Gefco.CipQuai.Web.Models.Region

@{
    ViewBag.Title = "Éditer Région [" + Model.Name + "]";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    ViewBag.ShowHeader = false;
    var id = Tools.GenerateRandomString(8);
}
<div class="row dashboard" id="capture">
    <div class="col-xl-12 col-md-12 px-1 px-sm-3">
        <div class="card product-progress-card">
            <div class="card-header main-header">
                <h4>Infos Région - @Model.Name</h4>
            </div>
            <div class="card-block p-2">
                <div class="pp-main row m-0">
                    <div class="col-3 px-0"></div>
                    <div class="col-6 px-0">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                @Html.HiddenFor(model => model.Id)

                                <div class="form-group row">
                                    <label class=" col-md-4" for="@nameof(Model.Name)">Nom</label>
                                    <div class="col-md-8">
                                        @Html.EditorFor(model => model.Name, new
                                        {
                                            htmlAttributes = new
                                            {
                                                @class = "form-control"
                                            }
                                        })
                                        @Html.ValidationMessageFor(model => model.Name, "", new
                                        {
                                            @class = "text-danger"
                                        })
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class=" col-md-4" for="@nameof(Model.AutoValidateNC)">Validation NC automatique</label>
                                    <div class="col-md-8">
                                        @Html.EJS().CheckBoxFor(model => model.AutoValidateNC, new
                                                                                               {
                                                                                                   htmlAttributes = new
                                                                                                                    {
                                                                                                                        @class = "form-control"
                                                                                                                    }
                                                                                               }).Render()
                                        @Html.ValidationMessageFor(model => model.AutoValidateNC, "", new
                                                                                                      {
                                                                                                          @class = "text-danger"
                                                                                                      })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class=" col-md-4" for="@nameof(Model.AutoCloseDP)">Auto clôturer déclarations DP</label>
                                    <div class="col-md-8">
                                        @Html.EJS().CheckBoxFor(model => model.AutoCloseDP, new
                                                                                               {
                                                                                                   htmlAttributes = new
                                                                                                                    {
                                                                                                                        @class = "form-control"
                                                                                                                    }
                                                                                               }).Render()
                                        @Html.ValidationMessageFor(model => model.AutoCloseDP, "", new
                                                                                                      {
                                                                                                          @class = "text-danger"
                                                                                                      })
                                    </div>
                                </div>
                                @*<div class="form-group row">
                                    <label class=" col-md-4" for="@nameof(Model.LimitDP)">Limiter ancienneté déclarations DP</label>
                                    <div class="col-md-8">
                                        @Html.EJS().CheckBoxFor(model => model.LimitDP, new
                                                                                               {
                                                                                                   htmlAttributes = new
                                                                                                                    {
                                                                                                                        @class = "form-control"
                                                                                                                    }
                                                                                               }).Render()
                                        @Html.ValidationMessageFor(model => model.LimitDP, "", new
                                                                                                      {
                                                                                                          @class = "text-danger"
                                                                                                      })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class=" col-md-4" for="@nameof(Model.LimitDPCount)">Limite ancienneté déclaration DP</label>
                                    <div class="col-md-8">
                                        @Html.EditorFor(model => model.LimitDPCount, new
                                                                             {
                                                                                 htmlAttributes = new
                                                                                                  {
                                                                                                      @class = "form-control"
                                                                                                  }
                                                                             })
                                        @Html.ValidationMessageFor(model => model.LimitDPCount, "", new
                                                                                            {
                                                                                                @class = "text-danger"
                                                                                            })
                                    </div>
                                </div>*@

                                <div class="form-group row">
                                    <div class="col-md-4"></div>
                                    <div class="col-md-8">
                                        <button type="button" class="e-btn e-danger" onclick="javascript:window.location = '@Url.Action("Index")'">Retour à la liste</button>
                                        <input type="submit" value="Sauvegarder" class="e-btn e-primary" />
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Content/assets/amcharts/charts.js"></script>


