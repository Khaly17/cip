@model Gefco.CipQuai.Web.Models.IndexViewModel
@{
    ViewBag.PageIcon = "feather icon-user";
    ViewBag.Title = "Manage profile";
    ViewBag.PageStory = "Here you can manage your own profile";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";

}

@section breadcrumb
{
    <li class="breadcrumb-item"><a href="#!">@ViewBag.Title</a> </li>
}
<div class="row">
