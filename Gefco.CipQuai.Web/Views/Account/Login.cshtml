@using Gefco.CipQuai.Web.Models
@model LoginViewModel
@{
    ViewBag.Title = "Se connecter";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-material", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="text-center">
        <div class="navbar-brand">
            <svg role="presentation" class="logo img-fluid"><use xlink:href="~/Content/assets/images/sprite.svg#gefco_logo"></use></svg>
        </div>
    </div>
    <div class="auth-box card">
        <div class="card-block">
            <div class="row m-b-20">
                <div class="col-md-12">
                    <h3 class="text-center txt-primary">Se connecter</h3>
                </div>
            </div>
            <div class="form-group form-primary">
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                <span class="form-bar"></span>
                @Html.LabelFor(m => m.Username, new { @class = "float-label" })
                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
            </div>
            <div class="form-group form-primary">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                <span class="text-right float-right">
                    <a href="@Url.Action("ForgotPassword")" class="text-right f-w-600">Mot de passe oublié ?</a>
                </span>
                <span class="form-bar"></span>
                @Html.LabelFor(m => m.Password, new { @class = "float-label" })
                <div class="col-12">
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
            </div>
            @*<div class="row m-t-25 text-left">
                <div class="col-12">
                    <div class="checkbox-fade fade-in-primary">
                        <label>
                            <input type="checkbox" value="" name="RememberMe">
                            <span class="cr"><i class="cr-icon icofont icofont-ui-check txt-primary"></i></span>
                            <span class="text-inverse">Remember me</span>
                        </label>
                    </div>
                    <div class="text-right float-right">
                        <a href="@Url.Action("ForgotPassword")" class="text-right f-w-600">Forgot Password ?</a>
                    </div>
                </div>
            </div>*@
            <div class="row m-t-30">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </div>
            <div class="row m-t-30">
                <div class="col-md-12">
                    <input type="submit" class="btn btn-primary btn-md btn-block waves-effect text-center m-b-20" value="CONNEXION">
                </div>
            </div>
            @*<p class="text-inverse text-left">Don't have an account ? @Html.ActionLink("Register here", "Register")</p>*@
        </div>
    </div>
    @* Enable this once you have account confirmation enabled for password reset functionality
        <p>
            @Html.ActionLink("Forgot your password?", "ForgotPassword")
        </p>*@
}
