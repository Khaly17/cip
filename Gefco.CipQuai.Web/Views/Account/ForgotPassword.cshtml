@model Gefco.CipQuai.Web.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Mot de passe oublié";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-material", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="text-center">
        <div class="navbar-brand">
            <svg role="presentation" class="logo img-fluid"><use xlink:href="~/Content/assets/images/sprite.svg#gefco_logo"></use></svg>
        </div>
    </div>
    <div class="auth-box card">
        <div class="card-block">
            <div class="row m-b-20">
                <div class="col-md-12">
                    <h3 class="text-left">Mot de passe oublié</h3>
                </div>
            </div>
            <div class="form-group form-primary">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                <span class="form-bar"></span>
                <label class="float-label">Adresse e-mail</label>
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
            <div class="row">
                <div class="col-md-12">
                    <input type="submit" class="btn btn-primary btn-md btn-block waves-effect text-center m-b-20" value="Envoyer lien">
                </div>
            </div>
            <p class="f-w-600 text-right"><a href="@Url.Action("Login", "Account")">Retour à la page de connexion</a></p>
        </div>
    </div>
}

